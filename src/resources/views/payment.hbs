<div class="payment">
    <div class="payment-header">
        <i class=""></i>
        <div class="payment-title">
            <p>Thanh Toán</p>
        </div>
        <input type="text" placeholder="Vui lòng nhập địa chỉ nhận hàng">
    </div>

    <div class="payment-container">
        <div class="voucher">
            <i class="ti-gift"></i>
            <select>
                <option value="" disabled selected>Chọn mã giảm giá</option>
                <option value="5percent" data-discount="50">Giảm 5% cho đơn hàng</option>
                <option value="freeship" data-discount="30">Miễn phí vận chuyển ($30)</option>
                <option value="100k" data-discount="100">Giảm 100.000 VNĐ</option>
                <option value="50k" data-discount="50">Giảm 50.000 VNĐ</option>
                <option value="vip" data-discount="200">Giảm 200.000 VNĐ (dành cho khách hàng VIP)</option>
            </select>
        </div>
        <div>
            <p>Tổng số tiền</p>
            <span>$1000</span>
        </div>
        <div>
            <p>Số tiền giảm</p>
            <span>$100</span>
        </div>
        <div>
            <p>Số tiền thanh toán</p>
            <span>$900</span>
        </div>

        <button >Xác nhận thanh toán</button>
    </div>
</div>
